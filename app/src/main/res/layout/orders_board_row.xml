<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100">

    <TextView
        android:id="@+id/TextViewOrderBoardRowProductName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="50"
        android:gravity="center"
        android:text="Product Name"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TextViewOrderBoardRowQuantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="80"
        android:gravity="center"
        android:text=""
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TextViewOrderBoardRowStatus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text=""
        android:textAlignment="center" />
    <TextView
        android:id="@+id/TextViewOrderBoardCustomer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="100"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/TextViewOrderBoardDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="100"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/TextViewOrderID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="100"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:visibility="gone"/>


</LinearLayout>